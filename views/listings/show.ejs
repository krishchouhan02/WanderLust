<% layout('layouts/boilerplate') -%>
<script>
  const listing = <%- JSON.stringify(listing) %>
</script>

<h3 class="show-title col-12 col-md-6 offset-0 offset-md-3 mb-4 mt-3">
  <%= listing.title %>
</h3>
<div class="row">
  <div class="card show-card listing-card col-12 col-md-6 offset-0 offset-md-3">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <br />
      <p class="card-text">
        Owned By :
        <i class="owner"><%= listing.owner.username %></i>
      </p>
      <p class="card-text"><%= listing.description%></p>
      <p class="card-text">
        &#8377;<%= listing.price.toLocaleString("en-IN") %><br /><%=
        listing.location %>, &nbsp;<%= listing.country %>
      </p>
    </div>
  </div>

  <% if(currUser && currUser._id.equals(listing.owner._id)) { %>

  <div class="col-12 col-md-6 offset-md-3 btns mt-3 mb-3">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn"
      >Edit
    </a>
    <form method="post" action="/listings/<%=listing.id%>?_method=DELETE">
      <button class="btn btn-dark delete-btn">Delete</button>
    </form>
  </div>
  <% } %>

  <div class="col-12 col-md-8 offset-0 offset-md-3 mt-4 mb-4">
    <% if(currUser) { %>
    <hr />
    <h4>Leave a review</h4>
    <form
      class="mb-3 needs-validation"
      action="/listings/<%=listing._id %>/reviews"
      method="post"
      novalidate
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating : </label><br />
        <fieldset class="starability-slot">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-lebel">Comment : </label><br />
        <textarea
          name="review[comment]"
          id="comment"
          rows="5"
          class="form-control mt-3"
          required
        ></textarea>
        <div class="invalid-feedback">Please add some comments for review</div>
      </div>
      <button class="btn btn-outline-dark mt-3">Submit</button>
    </form>
    <% } %> <% if(listing.reviews.length > 0) { %>

    <div class="row">
      <p><b>All Reviews</b></p>
      <% for(review of listing.reviews) { %>
      <div class="card mt-4 mb-4 col-12 col-md-5">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p
            class="starability-result card-text"
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <form
          class="mb-4"
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id%>?_method=DELETE"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
  <div class="col-12 col-md-8 offset-0 offset-md-3 mb-4">
    <h3>Where you'll be</h3>
    <div id="map" class="mt-4"></div>
  </div>
</div>

<script src="/js/map.js"></script>
