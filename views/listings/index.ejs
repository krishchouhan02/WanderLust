<% layout('layouts/boilerplate') -%>
<body>
  <% const filters = [ { name: "Trending", icon: "fa-fire" }, { name: "Rooms",
  icon: "fa-bed" }, { name: "Iconic Cities", icon: "fa-mountain-city" }, { name:
  "Mountain", icon: "fa-mountain" }, { name: "Arctic pool", icon: "fa-snowflake"
  }, { name: "Camping", icon: "fa-campground" }, { name: "Farms", icon:
  "fa-wheat-awn" } ]; %>

  <div id="filters">
    <% filters.forEach(f => { %>
    <a href="/listings/filter?category=<%= f.name %>" class="filter">
      <div>
        <i class="fa-solid <%= f.icon %>"></i>
      </div>
      <p><%= f.name %></p>
    </a>
    <% }) %>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="switchCheckDefault"
        />
        <label class="form-check-label" for="switchCheckDefault">
          Display total after taxes
        </label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
    <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card col">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top object-fit-cover"
          style="height: 20rem"
          alt="listing_image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
            &nbsp;&nbsp;&nbsp;
            <i class="tax-info">+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
